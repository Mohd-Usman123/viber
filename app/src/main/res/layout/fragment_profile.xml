<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/us"
        app:civ_border_width="2dp"
        app:civ_border_color="#00dddd"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOHD USMAN"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/plain_profilename"
            android:layout_marginTop="10sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mohdusman1114@gmail.com"
                android:textAllCaps="true"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/plain_profileemail"
                android:layout_marginTop="10sp"></TextView>



            <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:elevation="3sp"

        ></com.google.android.material.button.MaterialButton>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60sp"
        android:layout_marginTop="10sp"
        android:padding="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="60sp"
            android:orientation="horizontal"
            android:weightSum="6"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO NOT DISTURB. I'M WORKING"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="cursive"
                android:layout_weight="5"
                android:layout_margin="5sp"
                android:id="@+id/text_profileabout"
                ></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/baseline_edit_note_24"
                android:id="@+id/img_profilechangeabout"
                ></ImageView>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME"
                app:endIconMode="clear_text"
                android:layout_marginTop="10sp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="MOHD USMAN"
                    android:id="@+id/text_profilename"
                    ></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number"
                app:endIconMode="clear_text"
                android:layout_marginTop="10sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9369244388"
                    android:inputType="number"
                    android:id="@+id/text_profilemobono"
                    ></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                app:endIconMode="clear_text"
                android:layout_marginTop="10sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/text_profilegender"
                    ></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:startIconDrawable="@drawable/baseline_lock_24"
                android:layout_marginTop="10sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Password"
                    android:inputType="textPassword"
                    android:id="@+id/text_profilepassword"
                    ></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:backgroundTint="@color/black"
            android:layout_marginTop="10sp"
            android:id="@+id/btn_updateprofile">


        </com.google.android.material.button.MaterialButton>

</LinearLayout></ScrollView>
</LinearLayout>