<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registraition"
    android:orientation="vertical"
    android:background="@color/aqua"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:lineHeight="70sp"
                android:padding="20sp"
                android:text="CREATE AN \nACCOUNT"
                android:textColor="@color/white"
                android:textSize="40sp">

            </TextView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:padding="20sp"
                app:cardCornerRadius="30sp"
                app:cardElevation="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="40sp"
                        android:layout_marginRight="10sp"
                        android:hint="Enter Your Name"
                        android:padding="10sp"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/baseline_person_24"
                        app:startIconTint="@color/aqua">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:id="@+id/txt_name"
                            ></com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10sp"
                        android:hint="Enter mobile number"
                        android:padding="10sp"
                        app:startIconDrawable="@drawable/baseline_call_24"
                        app:startIconTint="@color/aqua">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_mobno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"></com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="40sp"
                        android:layout_marginRight="10sp"
                        android:hint="SELECT YOUR GENDER"
                        android:padding="10sp"
                        app:endIconMode="clear_text"
                        app:startIconTint="@color/aqua">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"></com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textSize="15sp"></RadioButton>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textSize="15sp"></RadioButton>
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10sp"
                        android:hint="Enter your Email"
                        android:padding="10sp"
                        app:startIconDrawable="@drawable/baseline_email_24"
                        app:startIconTint="@color/aqua"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"></com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="40sp"
                        android:layout_marginRight="10sp"
                        android:hint="Enter Your Password"
                        android:padding="10sp"
                        app:endIconMode="password_toggle"
                        app:startIconDrawable="@drawable/baseline_lock_24"
                        app:startIconTint="@color/aqua"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"></com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/text_gotologin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20sp"
                        android:text="Already Register? Login"
                        android:textColor="@color/aqua"
                        android:textSize="12sp">

                    </TextView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_Signup"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:backgroundTint="@color/aqua"
                        android:padding="5sp"
                        android:text="SIGN UP"
                        android:textColor="@color/white">

                    </com.google.android.material.button.MaterialButton>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>